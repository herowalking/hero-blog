<%- include header %>
<% if(locals.islogin) { %>
<div class="box gray tc">
    <p class="mt30">欢迎回来，亲爱的<span class="orange"><%= test %></span></p>
    <p><a href="/logout" class="orange">退出账户</a></p>
</div>
<% } else{ %>
<div class="box">
    <form role="form" method="post" action="/login" class="form">
        <h3 class="title">hero会员登录中心</h3>
        <div class="line">
            <input type="text" autocomplete="off" name="username" value="" class="txt phone" placeholder="请输入用户名">
        </div>
        <div class="line">
            <input type="password" value="" class="txt password" name="password" placeholder="请输入登录密码">
        </div>
        <div class="line tr gray">
            还没账号？<a href="/reg" class="orange">立即注册</a>
        </div>
        <div class="line">
            <input type="submit" value="登 录" class="btn">
        </div>
    </form>
</div>
<% } %>
<%- include footer %>